<article class="container login">

  <h1 class="mb-5">Iniciar sesión</h1>
  {{#if message}}
    <div class="alert alert-primary" role="alert">
      {{message}}
    </div>
  {{/if}}

  {{#if error.validation}}
    <div class="alert alert-danger" role="alert">
      {{error.validation.message}}
    </div>
  {{/if}}

  <form action="/login" method="POST">
    <div class="form-group">
      
      <input name="email" type="email" class="form-control {{#if error.email }}is-invalid{{/if}}" id="email"
        placeholder="Enter email" value="{{ user.email }}" required>
  
      {{#if error.email}}
      <div class="invalid-feedback">
        {{error.email.message}}
      </div>
      {{/if}}
    </div>
  
    <div class="form-group">
      
      <input name="password" type="password" class="form-control {{#if error.password }}is-invalid{{/if}}" id="password"
        placeholder="Contraseña" value="{{ user.password }}" required>
  
      {{#if error.password}}
      <div class="invalid-feedback">
        {{error.password.message}}
      </div>
      {{/if}}
    </div>
  
 
     <div class="d-flex mb-3">
      <button type="submit" class="btn btn-primary">Entrar</button>
      
    </div>
